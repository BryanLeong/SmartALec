<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.smartalec">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CourseListActivity">
        </activity>
        <activity android:name=".InstructorCourseActivity"
                android:parentActivityName=".CourseListActivity">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".StudentQuizActivity"
                android:parentActivityName=".StudentCourseActivity">
        </activity>
        <activity android:name=".StudentCourseActivity"
                android:parentActivityName=".CourseListActivity">
        </activity>
        <activity android:name=".StudentLectureActivity"
                android:parentActivityName=".StudentCourseActivity">
        </activity>
        <activity android:name=".InstructorLectureActivity"
                android:parentActivityName=".InstructorCourseActivity">
        </activity>
        <activity android:name=".InstructorQuizActivity"
                android:parentActivityName=".InstructorCourseActivity">
        </activity>
    </application>

</manifest>